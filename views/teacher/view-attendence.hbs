<section class="view-attendance-section py-5">
  <div class="container">
    <h2 class="text-center mb-4">View Attendance Records</h2>

    <!-- Year Selection -->
    <div class="mb-4">
      <label for="yearSelect" class="form-label">Select Year</label>
      <select id="yearSelect" class="form-select">
        <option value="">Choose a year...</option>
        <option value="1">Year 1</option>
        <option value="2">Year 2</option>
        <option value="3">Year 3</option>
      </select>
    </div>

    <!-- Year 1 Attendance Records -->
    <div class="year-table" id="year-1-view" style="display: none;">
      <h3>Year 1 Attendance Records</h3>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>Roll Number</th>
              <th>Student Name</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>John Doe</td>
              <td>Present</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Year 2 Attendance Records -->
    <div class="year-table" id="year-2-view" style="display: none;">
      <h3>Year 2 Attendance Records</h3>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>Roll Number</th>
              <th>Student Name</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Jane Smith</td>
              <td>Absent</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Year 3 Attendance Records -->
    <div class="year-table" id="year-3-view" style="display: none;">
      <h3>Year 3 Attendance Records</h3>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>Roll Number</th>
              <th>Student Name</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Michael Johnson</td>
              <td>Present</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
<script>
 document.getElementById("yearSelect").addEventListener("change", function () {
  var selectedYear = this.value;

  // Hide all year tables
  var yearTables = document.querySelectorAll(".year-table");
  yearTables.forEach(function (table) {
    table.style.display = "none";
  });

  // Show the selected year table
  if (selectedYear) {
    document.getElementById("year-" + selectedYear + "-view").style.display = "block";
  }
});

</script>

