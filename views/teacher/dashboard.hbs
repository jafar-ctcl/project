<section class="dashboard-section py-4">
  <div class="container-fluid">
    <div class="row g-4">
      <!-- Timetable Card -->
      <div class="col-xl-8 col-md-12">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-gradient-primary text-white">
            <h5 class="card-title mb-0">Timetable Overview</h5>
          </div>
          <div class="card-body">
            {{#if days.length}}
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th class="text-center">Day</th>
                    {{#each times}}
                    <th class="text-center">{{this}}</th>
                    {{/each}}
                  </tr>
                </thead>
                <tbody>
                  {{#each days}}
                  <tr>
                    <td class="text-center fw-bold text-uppercase">{{this}}</td>
                    {{#if (lookup ../timetable this)}}
                    {{#each (lookup ../timetable this)}}
                    <td class="text-left">
                      {{#if subjects.length}}
                      {{#each subjects}}
                      <div class="mb-2">
                        <strong class="d-block">{{subject}}</strong>
                        <small class="text-muted">{{course}} - {{semester}}</small>
                      </div>
                      {{/each}}
                      {{else}}
                      <div class="text-muted">No class</div>
                      {{/if}}
                    </td>
                    {{/each}}
                    {{else}}
                    <td colspan="{{../times.length}}" class="text-center text-muted">No classes scheduled</td>
                    {{/if}}
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
            {{else}}
            <div class="text-center py-4">
              <p class="text-muted mb-0">No timetable available for this teacher.</p>
            </div>
            {{/if}}
          </div>
        </div>
      </div>

      <!-- Student List Card -->
      <div class="col-xl-4 col-md-12">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-gradient-info text-white">
            <h5 class="card-title mb-0">Student List</h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Semester</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each students}}
                  <tr>
                    <td>{{increment @index}}</td>
                    <td>{{name}}</td>
                    <td>{{semester}}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

