<section class="attendance-section py-5">
  <div class="container fw-bold">
    <h2 class="text-center mb-4">Attendance Management</h2>

    <!-- Year Selection -->
    <div class="mb-4">
      <label class="form-label fw-semibold">Select Year</label>
      <select class="form-select form-select-lg border-2 shadow-sm" id="yearSelect" name="year" required>
        <option value="" disabled selected>Choose a Year...</option>
        <option value="1">1 Year</option>
        <option value="2">2 Year</option>
        <option value="3">3 Year</option>
      </select>
    </div>
   


    {{!-- First Year Attendance --}}
<div class="year-table" id="year-1" style="display: none;">
  <!-- Attendance Form -->
  <form action="/teacher/add-attendence" method="POST">
    <!-- Date Selection -->
    <div class="mb-4">
      <label class="form-label fw-semibold">Select Date</label>
      <input type="date" class="form-control form-control-lg" name="attendanceDate" required />
    </div>

    {{#if firstYearStudents}}
    <h3>Attendance for Year 1</h3>

    <div class="table-responsive mt-4">
      <table class="table table-bordered table-hover">
        <thead class="bg-primary text-white">
          <tr>
            <th>Roll Number</th>
            <th>Student Name</th>
            <th>Present</th>
            <th>Absent</th>
          </tr>
        </thead>
        <tbody>
          {{#each firstYearStudents}}
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>
              <input
                type="radio"
                name="attendance[{{this.id}}]"
                value="present|{{this.name}}"
                required
              />
            </td>
            <td>
              <input
                type="radio"
                name="attendance[{{this.id}}]"
                value="absent|{{this.name}}"
                required
              />
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{/if}}

    <!-- Submit Button -->
    <div class="text-center mt-4">
      <button type="submit" class="btn btn-success btn-lg">Submit Attendance</button>
    </div>
  </form>
</div> 

    {{!-- first year attendance end--}}

