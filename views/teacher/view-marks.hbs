<section class="marks-view">
  <div class="container ">

    {{#each groupedMarks}}
    <div class="course-section mb-5">
      <div class="card shadow-lg">
        <div class="card-header">
          <h3 class="course-title">{{@key}}</h3>
        </div>
        <div class="card-body">
          <table class="table table-striped table-hover">
            <thead class="thead-dark">
              <tr>
                <th>Name</th>
                <th>Subject</th>
                <th>Semester</th>
                <th>Marks</th>
              </tr>
            </thead>
            <tbody>
              {{#each this}}
              <tr>
                <td>{{this.name}}</td>
                <td>{{this.subject}}</td>
                <td>{{this.semester}}</td>
                <td>{{this.marks}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    {{/each}}


    <div class="card shadow-lg p-4 mb-4 ">
      <h4 class="text-center mb-4 text-primary">Marks List</h4>
      <form action="/teacher/view-marks" method="POST" class="border p-4 bg-light rounded shadow-sm">

        <!-- Select Course -->
        <div class="mb-3">
          <label for="course" class="form-label">Course</label>
          <select id="course" name="course" class="form-select" required>
            <option value="" disabled selected>Select a Course</option>
            {{#each course}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </div>

        <!-- Select Semester -->
        <div class="mb-3">
          <label for="semester" class="form-label">Semester</label>
          <select id="semester" name="semester" class="form-select" required>
            <option value="" disabled selected>Select a Semester</option>
            {{#each semester}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </div>

        <!-- Select Subject -->
        <div class="mb-3">
          <label for="subject" class="form-label">Subject</label>
          <select id="subject" name="subject" class="form-select" required>
            <option value="" disabled selected>Select a Subject</option>
            {{#each subject}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </div>

        <!-- Submit Button -->
        <div class="row mt-4">
          <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary btn-lg px-4 py-2 shadow-lg hover-effect">Get Students</button>
          </div>
        </div>
      </form>
    </div>


  </div>
</section>

