<section class="students-list-section">
  {{#if students}}
  <div class="container">
    <h2 class="text-center mb-4">Add Marks</h2>

    <!-- Display Course and Semester -->
    <div class="text-center mb-3">
      <h4>Course: <span>{{course}}</span> - Semester: <span>{{semester}}</span></h4>
      <h5>Subject: <span>{{subject}}</span></h5>
    </div>

  

    <!-- Form for Adding Marks -->
    <form action="/teacher/add-mark" method="POST">
      <input type="hidden" name="subject" value="{{subject}}">
      <input type="hidden" name="semester" value="{{semester}}">
      <input type="hidden" name="course" value="{{course}}">

      <!-- Table for Listing Students -->
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Marks</th>
          </tr>
        </thead>
        <tbody>
          {{#each students}}
          <tr>
            <input type="hidden" name="name" value="{{this.name}}">
            <input type="hidden" name="email" value="{{this.email}}">
            <td>{{this.name}}</td>
            <td>
              <input type="number" name="marks" class="form-control" min="0" max="100" placeholder="Enter Marks">
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      <!-- Submit Button -->
      <div class="text-center mt-3">
        <button type="submit" class="btn btn-primary">Submit Marks</button>
      </div>
    </form>
  </div>
  {{else}}
    <!-- Display Error Message -->
    {{#if errorMessage}}
      <div class="alert alert-danger text-center">
        <p>{{errorMessage}}</p>
        <a href="/teacher/students-list" class="btn btn-primary">Retry</a>
      </div>
    {{else}}
    <!-- No Data Found Message -->
    <div class="no-data-message text-center">
      <h2>No Data Found</h2>
      <p class="lead">It seems there are no students available for the selected course and semester.</p>
    </div>
    {{/if}}
  {{/if}}
</section>

<style>
