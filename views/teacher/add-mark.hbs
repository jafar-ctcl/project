  }

  /* Headings */
  h2 {
    font-size: 2rem;
    color: #333;
    margin-bottom: 20px;
  }

  h4, h5 {
    font-size: 1.1rem;
    color: #555;
  }

  span {
    font-weight: bold;
  }

  /* Table Styles */
  .table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .table th, .table td {
    padding: 12px;
    text-align: left;
    border: 1px solid #ddd;
  }

  .table th {
    background-color: #f2f2f2;
    color: #333;
  }

  .table td {
    background-color: #fff;
  }

  .table input {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  /* Button Styles */
  .btn {
    color: #fff;
    border: none;
    padding: 10px 30px;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .
  /* Alert Styles */
  .alert-danger {
    margin-bottom: 20px;
    font-size: 1.1rem;
  }

  /* No Data Found Styles */
  .no-data-message {
    margin-top: 50px;
    padding: 30px;
    background-color: #f8d7da;
    color: #721c24;
    border-radius: 5px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .no-data-message h2 {
    font-size: 2rem;
    color: #721c24;
  }

  .no-data-message p {
    font-size: 1.1rem;
    color: #721c24;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      width: 95%;
    }

    h2 {
      font-size: 1.8rem;
    }

    .table th, .table td {
      padding: 8px;
    }

    .table input {
      font-size: 0.9rem;
    }

    .no-data-message h2 {
      font-size: 1.8rem;
    }

    .no-data-message p {
      font-size: 1rem;
    }
  }
</style>
