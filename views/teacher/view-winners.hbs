<section class="container my-5">
    <!-- Event Title Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 font-weight-bold text-primary">{{event.eventTitle}}</h1>
        <p class="lead text-muted">Celebrating the champions of the event!</p>
    </div>

    <!-- Winners Section -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-black">
                    <h5 class="card-title mb-0 ">üèÜ Winners</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                               
                                <span class="h5 mb-0 ml-3">First Prize: {{event.first}}</span>
                            </div>
                            <i class="fas fa-trophy text-warning"></i>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                              
                                <span class="h5 mb-0 ml-3">Second Prize: {{event.second}}</span>
                            </div>
                            <i class="fas fa-medal text-secondary"></i>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                
                                <span class="h5 mb-0 ml-3">Third Prize: {{event.third}}</span>
                            </div>
                            <i class="fas fa-award text-info"></i>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Section -->
    <div class="text-center mt-5">
        <a href="/teacher/view-event" class="btn btn-outline-primary ">
            <i class="fas fa-arrow-left mr-2"></i>Back to Events
        </a>
    </div>
</section>