<section class="attendance-section py-5">
  <div class="container fw-bold">
    <h2 class="text-center mb-4">Add Attendance</h2>

    <!-- Attendance Form -->
    <div class="year-table">
      <form action="/teacher/add-attendance" method="POST">
        <!-- Date Selection -->
        <div class="mb-4">
          <label class="form-label fw-semibold">Select Date</label>
          <input 
            type="date" 
            class="form-control form-control-lg" 
            name="attendanceDate" 
            required 
          />
        </div>

        <!-- Year Heading -->
        <h3>Attendance for {{year}} year students </h3>

        <!-- Attendance Table -->
        <div class="table-responsive mt-4">
          <table class="table table-bordered table-hover">
            <thead class="bg-primary text-white">
              <tr>
                <th>Roll Number</th>
                <th>Student Name</th>
                <th>Present</th>
                <th>Absent</th>
              </tr>
            </thead>
            <tbody>
              {{#each students}}
              <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>
                  <input 
                    type="radio" 
                    name="attendance[{{this.id}}]" 
                    value="present|{{this.name}}" 
                    required 
                  />
                </td>
                <td>
                  <input 
                    type="radio" 
                    name="attendance[{{this.id}}]" 
                    value="absent|{{this.name}}" 
                    required 
                  />
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>

        <!-- Hidden Year Input -->
        <input type="hidden" name="year" value="{{this.year}}" />

        <!-- Submit Button -->
        <div class="text-center mt-4">
          <button type="submit" class="btn btn-success btn-lg">Submit Attendance</button>
        </div>
      </form>
    </div>
  </div>
</section>

<!-- Styles -->
<style>
  .attendance-section {
    background-color: #f8f9fa;
    padding: 50px;
    border-radius: 10px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .form-select {
    border-radius: 10px;
  }

  .year-table {
    margin-top: 30px;
  }

  .table-bordered th,
  .table-bordered td {
    text-align: center;
    vertical-align: middle;
  }

  .btn-success {
    background-color: #28a745;
    border-color: #28a745;
  }

  .btn-success:hover {
    background-color: #218838;
    border-color: #1e7e34;
  }
</style>
