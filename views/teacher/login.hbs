<section class="vh-100 d-flex align-items-center justify-content-center mt-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5 col-xl-4 shadow-lg p-4 rounded bg-white">
                <h3 class="text-center mb-3">Teacher Login</h3>
                <p class="text-center text-danger">{{err}}</p>

                <form action="/teacher/login" method="post">
                    
                    <!-- Email input -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold" for="email">Email Address</label>
                        <input type="email" name="email" id="email" class="form-control form-control-lg shadow-sm"
                            placeholder="Enter your email" required />
                    </div>

                    <!-- Password input -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold" for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control form-control-lg shadow-sm"
                            placeholder="Enter your password" required />
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <p class="small fw-bold mt-2">Don't have an account? 
                            <a href="/teacher/signup" class="text-primary">Sign up</a>
                        </p>
                    </div>

                    <!-- Login Button -->
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm">
                            Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
