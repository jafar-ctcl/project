<section>
  <div class="container py-4">
    {{#if courses}}
    <h2 class="text-center mb-4 text-primary">Add Student Marks</h2>

    <!-- Form for Adding Marks -->
    <form action="/teacher/students-list" method="POST" class="border p-4 bg-light rounded shadow-sm">
      <!-- Select Course -->
      <div class="mb-3">
        <label for="course" class="form-label">Course</label>
        <select id="course" name="course" class="form-select" required>
          <option value="" disabled selected>Select a Course</option>
          {{#each courses}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>

      <!-- Select Semester -->
      <div class="mb-3">
        <label for="semester" class="form-label">Semester</label>
        <select id="semester" name="semester" class="form-select" required>
          <option value="" disabled selected>Select a Semester</option>
          {{#each semesters}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>

      <!-- Select Subject -->
      <div class="mb-3">
        <label for="subject" class="form-label">Subject</label>
        <select id="subject" name="subject" class="form-select" required>
          <option value="" disabled selected>Select a Subject</option>
          {{#each subjects}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Get Students</button>
      </div>
    </form>
  {{else}}
<div class="text-center py-4">
  <h2 class="text-danger mb-3">Data Not Found</h2>
  <a href="/teacher" class="btn btn-primary px-4 py-2">Go Back</a>
</div>
{{/if}}

  </div>
</section>
