<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
<script src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
<section>
    <div class="container mt-5">
        {{!-- <p class="text-center text-warning mt-3 mb-3">{{status}}</p> --}}
        <table id="myTable" class="table table-hover  mt-5">
            <thead>
                <tr>
                    <th scope="col">Teacher Name</th>
                   
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                 
                    <th scope="col">Status</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each teachers}}
                <tr>
                    <td>{{name}}</td>
                
                    <td scope="col">{{email}}</td>
                    <td scope="col">{{phone}}</td>
              
                    {{#if status}}
                    <td scope="col">Active</td>
                    {{else}}
                    <td scope="col">Inactive</td>
                    {{/if}}
                    <td>
                        <a href="/hod/teacher-change-status/{{email}}/1" class="btn btn-success" >Approve</a>
                        <a href="/hod/teacher-change-status/{{email}}/0" class="btn btn-danger">Reject</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    let table = new DataTable('#myTable');
</script>