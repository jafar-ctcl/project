<section class="container mt-5 section-background">
  <div class="row">
    <div class="col-md-12">
      <!-- Table Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-dark">Teachers List</h4>
        <a href="/hod/view-teachers" class="btn btn-outline-info btn-lg shadow-lg hover-effect rounded-0">
          <i class="bi bi-person-lines-fill me-2"></i>  Approved Teachers
        </a>
      </div>

      <!-- Table for Teachers -->
      <div class="table-responsive">
        <table id="myTable" class="table table-striped table-bordered shadow-lg">
          <thead>
            <tr>
              <th>Teacher Name</th>
              <th>Email</th>
              <th>Gender</th>
              <th>Phone</th>
              <th>Status</th>
              <th>Options</th>
            </tr>
          </thead>
          <tbody>
            {{#each teachers}}
              <tr>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{gender}}</td>
                <td>{{phone}}</td>
                {{#if status}}
                  <td>Active</td>
                  <td>
                    <a href="/hod/teacher-change-status/{{email}}/0" class="btn btn-danger btn-sm">Reject</a>
                  </td>
                {{else}}
                  <td>Inactive</td>
                  <td>
                    <a href="/hod/teacher-change-status/{{email}}/1" class="btn btn-success btn-sm">Approve</a>
                  </td>
                {{/if}}
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

