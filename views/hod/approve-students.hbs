<section>
    <div class="container mt-5">
        {{!-- <p class="text-center text-warning mt-3 mb-3">{{status}}</p> --}}
        <table id="myTable" class="table table-hover  mt-5">
            <thead>
                <tr>
                    <th scope="col">Student Name</th>
                    <th scope="col">Gender</th>

                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Semester</th>
                    <th scope="col">Course</th>
                    <th scope="col">Status</th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{gender}}</td>

                    <td scope="col">{{email}}</td>
                    <td scope="col">{{phone}}</td>
                    <td scope="col">{{semester}}</td>
                    <td scope="col">{{course}}</td>
                    {{#if status}}
                    <td scope="col">Active</td>
                    <td> <a href="/hod/change-status/{{email}}/0" class="btn btn-danger">Reject</a>
                    </td>
                    {{else}}
                    <td scope="col">Inactive</td>
                    <td>
                        <a href="/hod/change-status/{{email}}/1" class="btn btn-success">Approve</a>
                    </td>
                    {{/if}}
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
        
<!-- View Teachers Button -->
<div class="container text-center">
    <a href="/hod/view-students" class="btn btn-primary mb-3">View students</a>
</div>

</section>

