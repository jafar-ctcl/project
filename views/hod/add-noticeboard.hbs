<section class="container mt-5">
  <h2 class="text-center mb-4">📢 Notice Board</h2>

  <!-- Add Notice Form -->
  <div class="card shadow-lg border-0 bg-light rounded p-4 mb-4">
    <h4 class="mb-3">📝 Add New Notice</h4>
    <form action="/hod/add-noticeboard" method="post">
      <div class="mb-3">
        <label for="noticeTitle" class="form-label">Title</label>
        <input type="text" class="form-control" id="noticeTitle" name="title" required>
      </div>
      <div class="mb-3">
        <label for="noticeContent" class="form-label">Content</label>
        <textarea class="form-control" id="noticeContent" name="content" rows="3" required></textarea>
      </div>
      <div class="mb-3">
        <label for="noticeDate" class="form-label">Date</label>
        <input type="date" class="form-control" id="noticeDate" name="date" required>
      </div>
      <button type="submit" class="btn btn-primary">📌 Post Notice</button>
    </form>
  </div>

  <!-- Go Back Button -->
  <div class="text-center mt-5">
    <a href="/hod" class="btn btn-outline-primary mb-3">⬅ Go Back</a>
  </div>
</section>
