<section class="container mt-5">
  <h1 class="h2 text-center mb-5 text-uppercase fw-bold text-primary">Event Details</h1>

  <!-- Event List -->
  <div class="row justify-content-center">
    {{#if events}}
    {{#each events}}
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card shadow-lg border-light rounded-3 overflow-hidden h-100">
        <!-- Sample Image -->
        <div class="card-body">
          <h5 class="card-title text-dark">{{this.eventTitle}}</h5>
          <p class="card-text text-muted"><strong>Date:</strong> {{this.eventDate}}</p>
          <p class="card-text text-muted"><strong>Time:</strong> {{this.formattedTimeRange}}</p>
          <p class="card-text text-muted"><strong>Place:</strong> {{this.eventPlace}}</p>
        {{#if this.guestNames}}  <p class="card-text text-muted"><strong>Guests:</strong> {{this.guestNames}}</p>{{/if}}
          {{!-- <p class="card-text text-muted"><strong>Guests:</strong> {{this.first}}</p> --}}
        </div>
        <div class="card-footer bg-light text-center">
          {{!-- <button class="btn btn-outline-primary btn-sm">View Details</button> --}}
          {{#if this.first}}
                <a class="btn btn-outline-primary btn-sm" href="/hod/view-winners/{{this.eventTitle}}/{{this.eventDate}}">View
            Winners</a>
            {{else}}
          <a class="btn btn-outline-primary btn-sm" href="/hod/add-winners/{{this.eventTitle}}/{{this.eventDate}}">Add
            Winners</a>
          {{/if}}
      
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
    <div class="col-12">
      <p class="text-center">No events available.</p>
    </div>
    {{/if}}
  </div>

  <!-- Navigation Button -->
  <div class="mt-5 text-center">
    <a href="/hod/add-event" class="btn btn-outline-primary">Add New Event</a>
  </div>
</section>

