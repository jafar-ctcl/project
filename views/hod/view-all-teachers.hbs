<section class="container mt-5">
  {{#if teachers}}
    <!-- Home Link with Style -->
    <a href="/hod" class="home-link text-decoration-none">
        <i class="bi bi-house-door me-2"></i>Home
    </a>
    <!-- Teachers List Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg border-0 bg-light rounded">
                <div class="card-body p-4">
                    <!-- Table to Display Teachers' Details -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped shadow-sm">
                            <thead class="thead-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Class Teacher</th>
                                    <th>class</th>
                                    <th>Subjects</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Loop through the teachers array to display each teacher's details -->
                                {{#each teachers}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                   {{#if (eq this.class_teacher 0)}}
                                   <td></td>
                                   {{else}}
                                    <td>
                                      {{this.class_teacher}}
                                    </td>
                                   {{/if}}
                                    {{!-- <td>{{this.class_teacher}}</td> --}}
                                    <td>{{this.course}}</td>
                                    <td>{{this.subjects}}</td>
                                    <td>
                                        <a href="/hod/view-managed-teacher/{{this.email}}"
                                            class="btn btn-success btn-sm">View</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{else}}
     <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">No Teachers Available</h5>
      </div>
      <div class="card-body text-center">
        <p class="card-text">Currently, there are no teachers available for management. Please approve teachers to begin managing them.</p>
      </div>
    </div>
  
   
{{/if}}

    <!-- Go back Button -->
    <div class="text-center mt-5">
        <a href="/hod/view-teachers" class="btn btn-primary mb-3">Go back</a>
    </div>
</section>

