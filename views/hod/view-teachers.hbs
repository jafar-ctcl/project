<section class="container mt-5 section-background">
  {{#if teachers}}
    <!-- Teachers List Section -->
    <div class="row">
      <div class="col-md-12">
        
        <div class="table-responsive">
          <!-- Table Header -->
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold text-dark">Teachers List</h4>
            <a href="/hod/view-all-teachers" class="btn btn-outline-info btn-lg shadow-lg hover-effect rounded-0">
              <i class="bi bi-person-lines-fill me-2"></i> Manage All Teachers
            </a>
          </div>

          <table class="table table-striped table-bordered ">
            <thead>
              <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="teacher-table-body">
              {{#each teachers}}
                <tr id="teacher-{{email}}" class="hover-effect">
                  <td>{{name}}</td>
                  <td>{{email}}</td>
                  <td>{{phone}}</td>
                  <td>{{gender}}</td>
                  <td class="text-center">
                    {{#if isManaged}}
                      <a href="/hod/view-managed-teacher/{{email}}" class="btn btn-success btn-sm">View</a>
                    {{else}}
                      <a href="/hod/manage-teacher/{{name}}/{{email}}" class="btn btn-info btn-sm">Manage</a>
                    {{/if}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Action Button -->
    <div class="text-center mt-4">
      <a href="/hod/approve-teacher" class="btn btn-info btn-lg">Approve Teachers</a>
    </div>
  {{else}}
    <!-- No Teachers Message -->
    <div class="card shadow-lg">
      <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">No Teachers Available</h5>
      </div>
      <div class="card-body text-center">
        <p class="card-text">Currently, there are no teachers available for management. Please approve teachers to begin managing them.</p>
      </div>
    </div>
<!-- Action Button outside Card -->
<div class="text-center mt-4">
    <a href="/hod/approve-teacher" class="btn btn-primary btn-lg custom-btn">Approve Teachers</a>
</div>
  {{/if}}
</section>
