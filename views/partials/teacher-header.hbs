<div class="d-flex" id="wrapper">
  <!-- Sidebar-->
  <div class="border-end bg-white" id="sidebar-wrapper">

    {{#if name}}
    <div class="sidebar-heading border-bottom bg-light text-center py-3 fw-bold"><a href="/teacher">{{name}}</a></div>
    {{else}}
    <div class="sidebar-heading border-bottom bg-light text-center py-3 fw-bold">Teacher</div>
    {{/if}}

    <!-- Accordion for Sidebar Links -->
    <div class="accordion" id="sidebarAccordion">
      <!-- Timetable Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingTimetable">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseTimetable" aria-expanded="false" aria-controls="collapseTimetable">
            Timetable
          </button>
        </h2>
        <div id="collapseTimetable" class="accordion-collapse collapse" aria-labelledby="headingTimetable"
          data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <ul class="list-unstyled mb-0">
              <li><a href="/teacher/timetable">View Timetable</a></li>
            </ul>
          </div>
        </div>
      </div>
      <!-- Students Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingStudents">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseStudents" aria-expanded="false" aria-controls="collapseStudents">
            Students
          </button>
        </h2>
        <div id="collapseStudents" class="accordion-collapse collapse" aria-labelledby="headingStudents"
          data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <ul class="list-unstyled mb-0">
              <li><a href="/teacher/students">View Students</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Attendance Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingAttendance">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseAttendance" aria-expanded="false" aria-controls="collapseAttendance">
            Attendance
          </button>
        </h2>
        <div id="collapseAttendance" class="accordion-collapse collapse" aria-labelledby="headingAttendance"
          data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <ul class="list-unstyled mb-0">
              <li><a href="/teacher/add-attendance">Add Attendance</a></li>
              <li><a href="/teacher/view-attendance">View Attendance</a></li>
              <li><a href="/teacher/monthly-attendance">Monthly Attendance</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Mark Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingMark">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseMark" aria-expanded="false" aria-controls="collapseMark">
            Mark
          </button>
        </h2>
        <div id="collapseMark" class="accordion-collapse collapse" aria-labelledby="headingMark"
          data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <ul class="list-unstyled mb-0">
              <li><a href="/teacher/students-list">Add Mark</a></li>
              <li><a href="/teacher/view-marks">View Mark</a></li>
            </ul>
          </div>
        </div>
      </div>
      <!-- Event Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingEvent">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseEvent" aria-expanded="false" aria-controls="collapseEvent">
            Event
          </button>
        </h2>
        <div id="collapseEvent" class="accordion-collapse collapse" aria-labelledby="headingEvent"
          data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <ul class="list-unstyled mb-0">

              <li><a href="/teacher/view-event">View Event</a></li>
            </ul>
          </div>
        </div>
      </div>
      <!-- Notice Board Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingNoticeBoard">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseNoticeBoard" aria-expanded="false" aria-controls="collapseNoticeBoard">
            Notice Board
          </button>
        </h2>
        <div id="collapseNoticeBoard" class="accordion-collapse collapse" aria-labelledby="headingNoticeBoard"
          data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <ul class="list-unstyled mb-0">
              <li><a href="/teacher/view-noticeboard">View Notice Board</a></li>
            </ul>
          </div>
        </div>
      </div>



      <!-- Logout Section -->
      <div class="accordion-item">
        <div class="accordion-body">
          <a class="text-center rounded btn btn-secondary px-3 w-100"
            style="font-size: 18px; padding: 6px; color:white;" href="/teacher/logout">Logout</a>
        </div>
      </div>

    </div> <!-- End of Accordion -->
  </div>

  <!-- Page content wrapper-->
  <div id="page-content-wrapper">
    <!-- Top navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
      <div class="container-fluid">
        <button class="btn btn-light" id="sidebarToggle">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>