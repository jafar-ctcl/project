<style>
    .timetable-view-section {
    background-color: #f8f9fa; /* Light background */
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.timetable-view-section h2 {
    font-weight: bold;
    color: #333;
}
.table thead {
    text-transform: uppercase;
    font-size: 0.9rem;
}

</style>
<section class="timetable-view-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Class Timetable</h2>

        <!-- Class and Day Selection -->
        <div class="row mb-4">
            <div class="col-md-6">
                <label for="classSelect" class="form-label">Select Class</label>
                <select id="classSelect" class="form-select">
                    <option value="">Choose a class...</option>
                    <option value="class1">Class 1</option>
                    <option value="class2">Class 2</option>
                    <option value="class3">Class 3</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="daySelect" class="form-label">Select Day</label>
                <select id="daySelect" class="form-select">
                    <option value="">Choose a day...</option>
                    <option value="monday">Monday</option>
                    <option value="tuesday">Tuesday</option>
                    <option value="wednesday">Wednesday</option>
                    <option value="thursday">Thursday</option>
                    <option value="friday">Friday</option>
                </select>
            </div>
        </div>

        <!-- Timetable Display -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Time</th>
                        <th>Subject</th>
                        <th>Classroom</th>
                        <th>Instructor</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample Data -->
                    <tr>
                        <td>9:00 AM - 10:00 AM</td>
                        <td>Mathematics</td>
                        <td>Room 101</td>
                        <td>Dr. Smith</td>
                    </tr>
                    <tr>
                        <td>10:15 AM - 11:15 AM</td>
                        <td>Physics</td>
                        <td>Room 102</td>
                        <td>Prof. Johnson</td>
                    </tr>
                    <tr>
                        <td>11:30 AM - 12:30 PM</td>
                        <td>Chemistry</td>
                        <td>Room 103</td>
                        <td>Ms. Carter</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Filter Button -->
        <div class="text-center mt-4">
            <button type="button" class="btn btn-primary">View Timetable</button>
        </div>
    </div>
</section>
