<section class="d-flex align-items-center justify-content-center min-vh-100" style="background: linear-gradient(135deg, #f5f7fa, #c3cfe2);">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-10 col-lg-8 col-xl-6 mx-auto">
                <div class="card shadow-lg p-4 p-md-5 border-0" style="border: 2px solid transparent; border-image: linear-gradient(135deg, #6a11cb, #2575fc); border-image-slice: 1;">
                    <h3 class="text-center mb-4">Sign up</h3>
                    
                    {{#if error}}
                    <p class="text-danger text-center">{{error}}</p>
                    {{/if}}

                    <form autocomplete="off" action="/signup" method="post">
                        <!-- Name -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label class="form-label" for="name">Name</label>
                            <input type="text" id="name" name="name" class="form-control form-control-lg rounded-pill shadow-sm"
                                placeholder="Enter your name" required />
                        </div>

                        <!-- Courses -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label for="course" class="form-label">Courses</label>
                            <select class="form-select rounded-pill shadow-sm" name="course" id="course" required>
                                <option selected disabled value="">Select course</option>
                                <option value="BCA">BCA</option>
                                <option value="BSC CS">BSC CS</option>
                            </select>
                        </div>

                        <!-- Semester -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label for="sem" class="form-label">Semester</label>
                            <select class="form-select rounded-pill shadow-sm" name="sem" id="sem" required>
                                <option value="">Select Semester</option>
                                <option value="1">1st SEM</option>
                                <option value="2">2nd SEM</option>
                                <option value="3">3rd SEM</option>
                                <option value="4">4th SEM</option>
                                <option value="5">5th SEM</option>
                                <option value="6">6th SEM</option>
                            </select>
                        </div>

                        <!-- Email -->
                        <div data-mdb-input-init class="form-outline mb-3 position-relative">
                            <label class="form-label" for="email">Email address</label>
                            <input type="email" name="email" id="email" class="form-control form-control-lg rounded-pill shadow-sm ps-5"
                                placeholder="Enter a valid email address" required />
                            <i class="fas fa-envelope position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                        </div>

                        <!-- Password -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label class="form-label" for="passwd">Password</label>
                            <input type="password" name="password" id="passwd" class="form-control form-control-lg rounded-pill shadow-sm"
                                placeholder="Enter password" required />
                        </div>

                        <!-- Phone -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label class="form-label" for="phone">Phone</label>
                            <input type="number" name="phone" id="phone" class="form-control form-control-lg rounded-pill shadow-sm"
                                placeholder="Enter phone number" required />
                        </div>

                        <!-- Date of Birth -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label class="form-label" for="dob">Date of birth</label>
                            <input type="date" id="dob" name="dob" class="form-control form-control-lg rounded-pill shadow-sm"
                                placeholder="Enter Date Of Birth" required />
                        </div>

                        <!-- Aadhar -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label class="form-label" for="aadhar">Aadhar</label>
                            <p id="a-msg" class="text-center text-danger d-none">Please enter a valid 12-digit aadhar number.</p>
                            <input type="number" name="aadhar" id="aadhar" class="form-control form-control-lg rounded-pill shadow-sm"
                                placeholder="Enter aadhar number" required />
                        </div>

                        <!-- Gender -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label for="" class="form-label">Gender</label>
                            <br>
                            <input type="radio" id="male" name="gender" value="male" class="form-check-input" required />
                            <label for="male">Male</label>
                            <input type="radio" id="female" name="gender" value="female" class="form-check-input" required />
                            <label for="female">Female</label>
                            <input type="radio" id="others" name="gender" value="others" class="form-check-input" required />
                            <label for="others">Others</label>
                        </div>

                        <!-- Login Link -->
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="small fw-bold mt-2 pt-1 mb-0">Already have an account? 
                                <a href="/login" class="link-danger text-decoration-none hover-underline">Login</a>
                            </p>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center align-item-center text-lg-start mt-4 pt-2">
                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm">
                                Signup
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>