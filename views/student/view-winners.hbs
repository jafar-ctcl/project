<section class="container my-5">
    <!-- Event Title Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 font-weight-bold text-primary">{{event.eventTitle}}</h1>
        <p class="lead text-muted">Celebrating the champions of the event!</p>
    </div>

    <!-- Winners Section -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 hover-scale">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="card-title mb-0">üèÜ Winners</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center hover-effect">
                            <div class="d-flex align-items-center">
                               
                                <span class="h5 mb-0">First Prize: {{event.first}}</span>
                            </div>
                            <i class="fas fa-trophy text-warning fa-2x"></i>
                        </li>
                        
                        <li class="list-group-item d-flex justify-content-between align-items-center hover-effect">
                            <div class="d-flex align-items-center">
                              
                                <span class="h5 mb-0">Second Prize: {{event.second}}</span>
                            </div>
                            <i class="fas fa-medal text-secondary fa-2x"></i>
                        </li>
                        {{#if event.third}}
                        <li class="list-group-item d-flex justify-content-between align-items-center hover-effect">
                            <div class="d-flex align-items-center">
                               
                                <span class="h5 mb-0">Third Prize: {{event.third}}</span>
                            </div>
                            <i class="fas fa-award text-info fa-2x"></i>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Section -->
    <div class="text-center mt-5">
        <a href="/view-event" class="btn btn-outline-primary btn-lg hover-grow">
            <i class="fas fa-arrow-left mr-2"></i>Back to Events
        </a>
    </div>
</section>

<!-- Custom CSS for Hover Effects and Animations -->
<style>
    .hover-scale {
        transition: transform 0.3s ease;
    }
    .hover-scale:hover {
        transform: scale(1.02);
    }
    .hover-effect {
        transition: background-color 0.3s ease, transform 0.3s ease;
    }
    .hover-effect:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
    .hover-grow {
        transition: transform 0.3s ease;
    }
    .hover-grow:hover {
        transform: scale(1.05);
    }
    .bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #00bfff);
    }
</style>